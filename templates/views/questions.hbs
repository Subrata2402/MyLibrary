<!DOCTYPE html>
<html lang="en">

<head>
    {{> header}}
    <title>MyLibrary</title>
    <style>
        .box-container {
            margin: 10px 15%;
            padding: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            background-color: blue;
            color: white;
            padding: 10px;
            border-radius: 8px;
            font-weight: bold;
        }

        h3 {
            font-weight: bold;
            color: green;
        }

        p {
            margin: 10px 0 0 15px;
        }

        span#time {
            display: flex;
            justify-content: flex-end;
            font-size: 15px;
            color: blueviolet;
        }

        {{!-- .question-container:hover {
            border: 0.5px solid rgb(111, 112, 111);
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
            margin-top: 10px;
        } --}}

        .question-container a {
            text-decoration: none;
            border: 0.5px solid rgb(111, 112, 111);
            padding: 5px 10px;
            border-radius: 5px;
            margin-left: 5px;
            color: rgb(111, 112, 111);
        }

        .question-container a:hover {
            background-color: rgb(111, 112, 111);
            color: white;
            box-shadow: 0 0 5px;
        }

        .icons {
            position: absolute;
            right: calc(15% + 30px);
            display: none;
        }

        @media (max-width: 1000px) {
            .box-container {
                padding: 10px;
                margin: 0;
            }

            .icons {
                right: 20px;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
</head>

<body>
    {{> navbar isAthenticated=isAthenticated}}
    <main>
        <div class="box-container">
            <h2>{{ title }}</h2>
            {{#if messageStatus}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>{{messageStatus}}</strong> {{message}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}
            {{#if questions}}
            {{#each questions}}
            <div class="question-container">
                <h3>{{math @index "+" 1}}. {{question}}</h3>
                <div class="icons">
                    <a href="/editq?_id={{ _id }}&topic={{ topic }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a href="/deleteq?_id={{ _id }}&topic={{ topic }}"><i class="fa-solid fa-trash"></i></a>
                </div>
                <p id="content{{math @index '+' 1}}"></p>
                <span id="time">{{time}}</span>
                <script>
                    document.getElementById('content{{math @index "+" 1}}').innerHTML = marked.parse(`{{{ answer }}}`);
                </script>
            </div>
            {{/each}}
            {{else}}
            <h3>There are no questions! To add questions <a href="/addq">Click Here</a></h3>
            {{/if}}
        </div>
    </main>
    {{> footer}}
    <script>
        const icons = document.querySelectorAll('.question-container');
        icons.forEach(icon => {
            icon.addEventListener('mouseover', () => {
                icon.querySelector('.icons').style.display = 'flex';
            });
            icon.addEventListener('mouseout', () => {
                icon.querySelector('.icons').style.display = 'none';
            });
        });
    </script>
</body>

</html>